# TASK-5: Настройки управления оригинальными видео файлами
# =====================================================

# Удаление оригинальных видео файлов
# Если true - система будет сравнивать длину оригинального и сжатого видео
# Если длина совпадает - оригинал удаляется, если нет - сохраняется с логом
DELETE_ORIGINAL_VIDEOS=false

# Настройки медиа обработки
# =========================

# Формат выходного аудио файла
MEDIA_OUTPUT_FORMAT=mp3

# Качество обработки медиа
MEDIA_QUALITY=medium

# Количество дней хранения временных файлов
MEDIA_CLEANUP_DAYS=30

# Включить сжатие видео
VIDEO_COMPRESSION=true

# Качество сжатия видео (low, medium, high)
VIDEO_QUALITY=medium

# Кодек для сжатия видео
VIDEO_CODEC=h264

# Настройки аудио
# ===============

# Битрейт аудио (kbps)
AUDIO_BITRATE=128k

# Частота дискретизации аудио (Hz)
AUDIO_SAMPLE_RATE=44100

# Формат аудио
AUDIO_FORMAT=mp3

# Настройки FFmpeg
# ================

# Таймаут для обработки видео (секунды)
VIDEO_PROCESSING_TIMEOUT=1800

# Таймаут для извлечения аудио (секунды)
AUDIO_EXTRACTION_TIMEOUT=600

# Путь к FFmpeg (если не в PATH)
# FFMPEG_PATH=/usr/local/bin/ffmpeg

# Дополнительные настройки
# ========================

# Логирование операций с файлами
FILE_OPERATIONS_LOGGING=true

# Создание резервных копий перед удалением
CREATE_BACKUP_BEFORE_DELETE=false

# Папка для резервных копий
BACKUP_DIRECTORY=data/backups

# Максимальный размер резервной копии (MB)
MAX_BACKUP_SIZE_MB=1000
